<div id='comment'>
  
   <p><%= @comment.author %></p>
   <p><%= @comment.content %></p>

  <%= link_to "Edit Comment", [:edit, @post, @comment] %>
  <%= link_to "Delete Comment", [@post, @comment], method: :delete,
             data: { confirm: "Are you sure you want to delete this comment?"} %>
</div>